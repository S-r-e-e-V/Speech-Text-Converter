<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".text_to_voice">

    <EditText
        android:id="@+id/text_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_tts"
        android:layout_margin="5dp"
        android:background="@drawable/text_bg"
        android:elevation="6dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:textColor="#000"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/linear_tts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/copy_tts"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/copy_tts" />

        <Button
            android:id="@+id/text_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:elevation="3dp"
            android:background="@drawable/btn_text" />

        <Button
            android:id="@+id/share_tts"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/share_tts" />
    </RelativeLayout>
</RelativeLayout>